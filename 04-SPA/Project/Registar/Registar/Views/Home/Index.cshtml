@model System.Collections.Generic.IEnumerable<Registar.Models.BikeModel>

@{
    Layout = "../MasterPage.cshtml";
}

@section HeaderScripts
{
    <script type="text/javascript"></script>  
    
}
@this.Html.Partial("_PartialView")

<table style="float: left;">
    <thead>
        <tr>
            <td>RegNumber</td>
            <td>Producer</td>
            <td>Model</td>
            <td>Colour</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var bike in this.Model)
        {
            <tr>
                <td>@bike.RegNumber</td>
                <td>@bike.Producer</td>
                <td>@bike.Model</td>
                <td>@bike.Colour</td>
            </tr>                    
        }
    </tbody>
</table>


<form action="public/Index" method="get">
    <table style="float: right;">
        <tbody>
            <tr>
                <td>Producer</td>
                <td><input type="text" name="producer" /></td>
            </tr>
            <tr>
                <td>Model</td>
                <td><input type="text" name="model" /></td>
            </tr>
            <tr>
                <td>Colour</td>
                <td><input type="text" name="colour" /></td>
            </tr>
            <tr>
                <td><input type="submit" /></td>
            </tr>
        </tbody>
    </table>
</form>